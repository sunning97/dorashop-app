<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Vui lòng điền đầy đủ thông tin" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/first_name_input_layout"
            app:errorEnabled="true">

            <com.neko.giangnguyen.dorashop.CustomView.LoginEmail
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và tên đệm"
                android:id="@+id/input_first_name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/last_name_input_layout"
            app:errorEnabled="true">

            <com.neko.giangnguyen.dorashop.CustomView.LoginEmail
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên"
                android:id="@+id/input_last_name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/email_input_layout"
            app:errorEnabled="true">

            <com.neko.giangnguyen.dorashop.CustomView.LoginEmail
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ email"
                android:textColor="@color/black"
                android:id="@+id/input_email"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mật khẩu phải bao gồm ít nhất 6 kí tự và có ít nhất 1 kí tự in hoa và số" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/password_input_layout"
            app:errorEnabled="true">

            <com.neko.giangnguyen.dorashop.CustomView.LoginPassword
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="Mật khẩu"
                app:eyeHidden="true"
                app:validator="true"
                android:id="@+id/input_password"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:errorEnabled="true"
            android:id="@+id/password_input_confirm_layout">

            <com.neko.giangnguyen.dorashop.CustomView.LoginPassword
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu"
                app:eyeHidden="true"
                android:id="@+id/input_password_confirm"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tôi đẫ hiểu và đồng ý với điều khoản của shop"
            android:id="@+id/switch_agree_confirm"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/orange"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:id="@+id/btn_register" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
